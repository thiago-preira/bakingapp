<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_recipe_ingredients_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:text="@sample/baking.json/recipes/ingredients/quantity" />

    <TextView
        android:id="@+id/tv_recipe_ingredients_measure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/tv_recipe_ingredients_quantity"
        app:layout_constraintTop_toTopOf="@+id/tv_recipe_ingredients_quantity"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recipe_ingredients_quantity"
        tools:text="@sample/baking.json/recipes/ingredients/measure" />

    <TextView
        android:id="@+id/tv_recipe_ingredients_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textAllCaps="true"
        app:layout_constraintStart_toEndOf="@+id/tv_recipe_ingredients_measure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_recipe_ingredients_measure"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recipe_ingredients_quantity"
        tools:text="@sample/baking.json/recipes/ingredients/ingredient" />
</android.support.constraint.ConstraintLayout>